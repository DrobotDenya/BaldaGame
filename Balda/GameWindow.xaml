<Window x:Class="Balda.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GameWindow" Height="300" Width="431.955" Loaded="Window_Loaded">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Height="160" Margin="152,37,158,72" VerticalAlignment="Center"/>
        <Label x:Name="lblPlayer1" Content="Label" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.516,1.455"/>
        <Label x:Name="lblPlayer2" Content="Label" HorizontalAlignment="Left" Margin="376,66,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBoxP1" HorizontalAlignment="Left" Height="100" Margin="10,97,0,0" VerticalAlignment="Top" Width="80" MouseDown="listBoxP1_MouseDown"/>
        <ListBox x:Name="listBoxP2" Height="100" Margin="340,92,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="152,202,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="&lt;-AddWord" HorizontalAlignment="Left" Margin="113,230,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="AddWord-&gt;" HorizontalAlignment="Left" Margin="244,230,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.73"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
