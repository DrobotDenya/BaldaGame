<Window x:Class="Balda.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartWindow" Height="321.053" Width="306.578" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Solaris"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="Orange"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Content="Балда&#xD;&#xA;" HorizontalAlignment="Center" Margin="21,42,43,135" VerticalAlignment="Center" Width="235" Height="106" RenderTransformOrigin="0.5,0.5" FontSize="72" Background="{x:Null}" Foreground="#FFE89114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-18.824"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="The Word Game&#xD;&#xA;" HorizontalAlignment="Center" Margin="63,120,132,101" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="10" Width="104">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-18.824"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button Content="Play" HorizontalAlignment="Left" Margin="217,252,0,0" VerticalAlignment="Top" Width="69" Background="{x:Null}" Foreground="#FFE89114" Click="Button_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="11.471"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <StackPanel HorizontalAlignment="Left" Height="79" Margin="96,175,0,0" VerticalAlignment="Top" Width="133">
            <TextBox x:Name="textBoxLogin" Margin="5" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.416,-0.094" BorderThickness="3" BorderBrush="#FFE89114" TextChanged="textBoxLogin_TextChanged" TextAlignment="Center"/>
            <TextBox x:Name="tbxPassword" Margin="5" HorizontalAlignment="Left" Height="16" TextWrapping="Wrap" Text="Password " VerticalAlignment="Top" Width="120" TextAlignment="Center" BorderBrush="#FFE89114" BorderThickness="3" FontSize="8"/>
            <TextBlock x:Name="textBlockRegistration" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Registration" VerticalAlignment="Top" Width="120" FontSize="9" TextDecorations="Underline" TextAlignment="Center" Foreground="#FF122EDE" MouseDown="textBlockRegistration_MouseDown"/>
        </StackPanel>
    </Grid>
</Window>
