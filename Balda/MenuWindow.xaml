<Window x:Class="Balda.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenuWindow" Height="300" Width="325">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}"
               TargetType="Button"
               x:Key="VerticalButton">
            <Setter Property="Background" Value="Purple"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FF908A87">
        <Button x:Name="buttonNewGame" Content="New Game" Margin="70,65,71,168" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" FontSize="20" Height="36" Background="#FFD0F00F" Foreground="#FFE89114" BorderBrush="{x:Null}" Click="buttonNewGame_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="10.864"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="buttonLoadGame" Content="Load Game" Margin="81,158,75,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" FontSize="18" Foreground="#FFE20B11" Background="#FF2896E0" BorderBrush="{x:Null}" Click="buttonLoadGame_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-9.777"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <DockPanel Height="269" LastChildFill="False" Margin="253,0,0,0" VerticalAlignment="Top">
            <Button Style="{StaticResource VerticalButton}" Margin="10,30,10,10" Content="H&#xA;i&#xA;g&#xA;h&#xA;s&#xA;c&#xA;o&#xA;r&#xA;e" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click" Foreground="#FFECE32E"/>
        </DockPanel>
        <DockPanel Height="269" LastChildFill="False" VerticalAlignment="Top" Margin="0,0,248,0" FlowDirection="RightToLeft">
            <Button Style="{StaticResource VerticalButton}" Margin="10,30,10,10" Content="S&#xA;e&#xA;t&#xA;t&#xA;i&#xA;n&#xA;g&#xA;s" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click"  Foreground="#FFD4CD2C"/>
        </DockPanel>

    </Grid>
</Window>
