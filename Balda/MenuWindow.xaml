<Window x:Class="Balda.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenuWindow" Height="300" Width="300">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}"
               TargetType="Button"
               x:Key="VerticalButton">
            <Setter Property="Background" Value="Purple"/> 
        </Style>
    </Window.Resources>
    <Grid Background="#FF908A87">
        <Button x:Name="buttonNewGame" Content="New Game" Margin="70,65,71,168" VerticalAlignment="Center" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" Width="151" FontSize="20" Height="36" Background="#FFD0F00F" Foreground="#FFE89114" BorderBrush="{x:Null}" Click="buttonNewGame_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="10.864"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="buttonLoadGame" Content="Load Game" HorizontalAlignment="Left" Margin="81,158,0,0" VerticalAlignment="Top" Width="136" RenderTransformOrigin="0.5,0.5" FontSize="18" Foreground="#FFE20B11" Background="#FF2896E0" BorderBrush="{x:Null}" Click="buttonLoadGame_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-9.777"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource VerticalButton}" Content="S&#xa;e&#xa;t&#xa;t&#xa;i&#xa;n&#xa;g&#xa;s" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click"  Foreground="#FFD4CD2C"/>
        <Button Style="{StaticResource VerticalButton}" Content="H&#xa;i&#xa;g&#xa;h&#xa;s&#xa;c&#xa;o&#xa;r&#xa;e" HorizontalAlignment="Left" Margin="257,34,0,0" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click" Foreground="#FFECE32E"/>

    </Grid>
</Window>
