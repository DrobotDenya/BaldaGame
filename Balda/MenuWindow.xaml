<Window x:Class="Balda.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenuWindow" Height="300" Width="325">
    <Window.Resources>
        <Style BasedOn="{StaticResource {x:Type Button}}"
               TargetType="Button"
               x:Key="VerticalButton">
            <Setter Property="Background" Value="Purple"/>
        </Style>
        <Style BasedOn="{StaticResource {x:Type Button}}"
               TargetType="Button"
               x:Key="NewGameBtn">
            <Setter Property="Background" Value="#FFD0F00F"/>
            <Setter Property="Content" Value="New Game"/>
            <Setter Property="Margin" Value="77,91,64,133"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="#FFE89114"/>
        </Style>
    </Window.Resources>
    <Grid Background="#FF908A87">
        <Button Style="{StaticResource NewGameBtn}" Name="ButtonNewGame" Click="buttonNewGame_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="10.864"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <DockPanel Height="269" LastChildFill="False" Margin="253,0,0,0" VerticalAlignment="Top">
            <Button Style="{StaticResource VerticalButton}" Margin="10,30,10,10" Content="H&#xA;i&#xA;g&#xA;h&#xA;s&#xA;c&#xA;o&#xA;r&#xA;e" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click" Foreground="#FFECE32E" FontWeight="Thin"/>
        </DockPanel>
        <DockPanel Height="269" LastChildFill="False" VerticalAlignment="Top" Margin="0,0,248,0" FlowDirection="RightToLeft">
            <Button Style="{StaticResource VerticalButton}" Margin="10,30,10,10" Content="S&#xA;e&#xA;t&#xA;t&#xA;i&#xA;n&#xA;g&#xA;s" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="208" Click="Button_Click"  Foreground="#FFD4CD2C" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
